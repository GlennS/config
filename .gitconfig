[init]
        defaultBranch = main
[user]
	name = Glenn Searby
	email = glenn.searby@gmail.com
[alias]
        recent = "!f() { git branch --sort=-committerdate --format='%(committerdate:relative)%09%(refname:short)' | head -n 10; }; f"
[merge]
	tool = meld
        conflictstyle = zdiff3
[core]
	editor = emacsclient -a emacs
[remote]
        pushDefault = origin
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[pull]
	ff = only
[fetch]
        prune = true
[push]
        autoSetupRemote = true
        # Push current branch even if you've never pushed it before
	default = current
[diff]
        algorithm = histogram
[rerere]
        enabled = true
[includeIf "gitdir/i:~/octopus/"]
        path = ~/.gitconfig-octopus
[includeIf "gitdir/i:C:/Users/Glenn/"]
        path = ~/.gitconfig-windows